            <div class="carousel-item">
              <img class="product-img d-block w-100" src="https:<%= @watch.background_img %>" alt="Second slide">
            </div>
            <div class="carousel-item">
              <img class="product-img d-block w-100" src="https:<%= @watch.background_img %>" alt="Third slide">
            </div>
          </div>
        </div>
      </div>

      <div class="col-md-6 text-left product-table bg-dark white-text">
        <div class="container-fluid">
          <div class="row header">
            <div class="col-12 text-left">
              <h4>Details</h4>
            </div>
          </div>
          <div class="row">
            <div class="col-6 font-weight-bold">Brand</div>
            <div class="col-6">JimBob</div>
          </div>
          <div class="row">
            <div class="col-6 font-weight-bold">Model</div>
            <div class="col-6">24hour</div>
          </div>
          <div class="row">
            <div class="col-6 font-weight-bold">Movement</div>
            <div class="col-6">Automatic</div>
          </div>
          <div class="row">
            <div class="col-6 font-weight-bold">Case Material</div>
            <div class="col-6">Steel</div>
          </div>
          <div class="row">
            <div class="col-6 font-weight-bold">Bracelet Material</div>
            <div class="col-6">Steel</div>
          </div>
          <div class="row">
            <div class="col-6 ">Year</div>
            <div class="col-6">1973</div>
          </div>
        </div>
      </div>

    <div class="row">
      <div class="col-12 text-left">
        <h4>Description</h4>
