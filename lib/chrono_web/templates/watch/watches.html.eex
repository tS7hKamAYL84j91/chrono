<div id="wrap" class="container">
  <div class="row-header">
    <h1>The Watches</h1>
    <p>blah blah</p>
  </div>

  <div class="row product-row">
  <%=for watch <- ChronoWeb.PageView.parse_pages(@watches) |> Enum.with_index do %>
    <%= if rem(elem(watch,1),@watches_per_row) == 0 && elem(watch,1) > 0 do %>
        <div class="w-100"></div>
    <% end %>
      <%= render "watch.html", watch: watch, conn: @conn, watches_per_row: @watches_per_row  %>
  <% end %>
  </div>

</div>
